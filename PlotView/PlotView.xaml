<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlotView"
             xmlns:WPF="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF" xmlns:Sketch="clr-namespace:Sketches;assembly=Sketch" x:Class="PlotView.PlotView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="grid">

        <WPF:OpenGLControl x:Name="glControl" Resized="OpenGLControl_Resized" OpenGLDraw="OpenGLControl_OpenGLDraw" OpenGLInitialized="OpenGLControl_OpenGLInitialized" MouseLeftButtonDown="glControl_MouseLeftButtonDown" MouseLeftButtonUp="glControl_MouseLeftButtonUp" MouseMove="glControl_MouseMove" Cursor="Cross" MouseWheel="glControl_MouseWheel"/>

    </Grid>
</UserControl>
